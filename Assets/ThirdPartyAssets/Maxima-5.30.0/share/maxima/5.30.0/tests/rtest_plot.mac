(r4(s) := block ([s : bfloat(s)], s!/(((s/4)!)^4 * 4^s)),
 plot2d (r4, [s, 200, 300], [adapt_depth, 0], [nticks, 5]));

plot2d ('r4(s), [s, 200, 300], [adapt_depth, 0], [nticks, 5]);

